<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/main_txvwCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="# - #"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="64sp" />
    
    <TextView
        android:id="@+id/main_txvwDataSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_txvwCount"
        android:layout_centerHorizontal="true"
        android:text="####"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button
        android:id="@+id/main_bttnCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/main_bttnSearch"
        android:drawableLeft="@drawable/ic_action_view_as_list"
        android:text="@string/categories" />

	<Button
        android:id="@+id/main_bttnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/main_bttnSync"
        android:drawableLeft="@drawable/ic_action_search"
        android:text="@string/search" />
    	
	<Button
        android:id="@+id/main_bttnSync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/main_bttnFillDB"
        android:text="Sync with DB" />
	
	<Button
        android:id="@+id/main_bttnFillDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/main_bttnClearDB"
        android:text="Fill Database" />
    
	<Button
        android:id="@+id/main_bttnClearDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/main_bttnClose"
        android:text="Clear Database" />
	
	<Button
        android:id="@+id/main_bttnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/close" />
	
</RelativeLayout>